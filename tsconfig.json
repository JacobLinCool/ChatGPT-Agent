{
    "exclude": ["**/lib", "**/_tests"],
    "compilerOptions": {
        "target": "es2020",
        "lib": ["es2020"],
        "module": "commonjs",
        "moduleResolution": "node",
        "declaration": true,
        "resolveJsonModule": true,
        "noEmitOnError": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    }
}
